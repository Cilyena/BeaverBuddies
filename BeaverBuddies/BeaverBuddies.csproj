<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>BeaverBuddies</AssemblyName>
    <Description>TimberModTest</Description>
    <Version>1.1.8</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
    <NoWarn>$(NoWarn);Harmony003</NoWarn>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="BepInEx.Core" Version="5.*" />
    <PackageReference Include="System.Collections.Immutable" Version="5.0.0" />
    <PackageReference Include="Timberborn.GameLibs" Version="0.6.0.4-r.0" />
    <PackageReference Include="UnityEngine.Modules" Version="2022.2.17" IncludeAssets="compile" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\TimberNet\TimberNet.csproj" />
  </ItemGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /y &quot;$(ProjectDir)$(OutDir)*&quot;  &quot;$(USERPROFILE)\Documents\Timberborn\Mods\BeaverBuddies&quot;&#xD;&#xA;copy &quot;$(ProjectDir)\manifest.json&quot;  &quot;$(USERPROFILE)\Documents\Timberborn\Mods\BeaverBuddies\manifest.json&quot;" />
  </Target>
</Project>
